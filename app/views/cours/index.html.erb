<p id="notice"><%= notice %></p>

<h1>Cours</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cours.each do |cour| %>
      <tr>
        <td><%= cour.titre %></td>
        <td><%= link_to 'Show', cour %></td>
        <td><%= link_to 'Edit', edit_cour_path(cour) %></td>
        <td><%= link_to 'Destroy', cour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cour', new_cour_path %>

<div data-controller="hello" class="mb-3">
  <label for="" class="form-label">Stimulus</label>
  <input type="text" data-target="hello.name" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
  <button type="button" data-action="click->hello#log" class="btn btn-primary|secondary|success|danger|warning|info|light|dark|link">Log</button>
</div>